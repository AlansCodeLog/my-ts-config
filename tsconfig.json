{
	"compilerOptions": {
		"target": "esnext",
		"module": "esnext",

		"noEmit": true, // I usually use babel

		"strict": true,

		"noUnusedLocals": false, // I set eslint to complain softly instead
		"noImplicitReturns": true,
		"noUnusedParameters": true,
		"noFallthroughCasesInSwitch": true,

		"importHelpers": true,
		"moduleResolution": "node",
		"esModuleInterop": true,
		"allowSyntheticDefaultImports": true,

		"sourceMap": true,

		"types": [
			"jest",
		],
		"lib": [
			"esnext"
		]
	}
}
