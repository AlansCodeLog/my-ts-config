{
	"compilerOptions": {
		// because I compile with babel
		"target": "esnext",
		"module": "esnext",

		"noEmit": true, // again because of babel

		"strict": true,

		"noUnusedLocals": false, // I set eslint to complain softly instead
		"noImplicitReturns": true,
		"noUnusedParameters": true,
		"noFallthroughCasesInSwitch": true,

		"importHelpers": true,
		"moduleResolution": "node",
		"esModuleInterop": true,
		"allowSyntheticDefaultImports": true,

		"sourceMap": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true,
	}
}
